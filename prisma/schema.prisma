generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

model User {
  userId          String           @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
  name            String
  auths           Auth[]
  genshinAccounts GenshinAccount[]
}

model Auth {
  id         String @id @unique @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  providerId String
  provider   String
  user       User   @relation(fields: [userId], references: [userId])
  userId     String @db.Uuid
}

model GenshinAccount {
  uid          String        @id @unique
  name         String?
  ar           Int?
  server       String?
  wl           Int?
  wishes       Wish[]
  achievements Achievement[]
  character    Character[]
  user         User          @relation(fields: [userId], references: [userId])
  userId       String        @db.Uuid
}

model Wish {
  id             String         @id @unique
  createdAt      DateTime       @default(now())
  uid            String
  gachaType      String         @map("gacha_type")
  time           DateTime       @map("wish_time")
  name           String
  itemType       String         @map("item_type")
  rankType       String         @map("rank_type")
  pity           String?
  genshinAccount GenshinAccount @relation(fields: [uid], references: [uid])
  wasImported    Boolean        @default(false)
}

model Achievement {
  id                  Int            @id @unique
  achievementCategory String
  achieved            Boolean
  preStage            Int?
  GenshinAccount      GenshinAccount @relation(fields: [uid], references: [uid])
  uid                 String
}

model Character {
  id             String
  level          Int?
  constellation  Int?
  ascension      Int?
  talentAuto     Int?
  talentSkill    Int?
  talentBurst    Int?
  genshinAccount GenshinAccount @relation(fields: [uid], references: [uid])
  uid            String

  @@id([id, uid])
}
